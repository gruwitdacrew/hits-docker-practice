@model Mockups.Models.OrdersManagement.OrdersManagementIndexViewModel

@{
    ViewData["Title"] = "Управление заказами";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2>Управление заказами</h2>

    <div class="mb-3">
        <a asp-controller="AdminAnalytics" asp-action="Index" class="btn btn-info">Перейти к аналитике</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Статус</th>
                <th>Дата и время</th>
                <th>Содержимое</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Items)
            {
            <tr>
                <td>@order.Id</td>
                <td>@order.StatusInfo</td>
                <td>@order.Date</td>
                <td>@order.Contents</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Детали</a>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-warning">Изменить</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>